@model IEnumerable<Ambe.Frontend.Models.Entidades.BitacoraViewModel>
@{
    ViewData["Title"] = "VerBitacora";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                <h5 class="card-title text-center bg-custom'">Bitacora de Acceso al Sistema</h5>
                <img src="/images/ramgarlogo.jpg" style="width: 75px; height: auto;" />
            </div>
            <hr />
            <div class="card-body">
                <table class="table table-hover table-responsive table-striped" id="bitacora">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Usuario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoAccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tabla)
                            </th>                          
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoAccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tabla)
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#bitacora').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}
