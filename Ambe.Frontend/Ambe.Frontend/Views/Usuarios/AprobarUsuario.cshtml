@model Ambe.Frontend.Models.Entidades.Usuarios

@{
    ViewData["Title"] = "AprobarUsuario";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <img src="/images/ramgarlogo.jpg" style="width: 100px; height: auto;" />
            <h5>Mantenimiento </h5>
        </div>
        <div class="card-body text-success">
            <form asp-action="AprobarUsuario" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdUsuario" />
                <input type="hidden" asp-for="IdPersona" />
                <input type="hidden" asp-for="IdInstituto" />                              
                <input type="hidden" asp-for="Contraseña" />
                <input type="hidden" asp-for="NombreUsuario" />
                
                <div class="form-group">
                    <label>Usuario</label>
                    <input asp-for="Usuario" class="form-control" readonly />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Correo</label>
                    <input asp-for="CorreoElectronico" class="form-control" readonly />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Fecha de creacion</label>
                    <input asp-for="FechaCreacion" class="form-control" readonly />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Creado Por</label>
                    <input asp-for="CreadoPor" class="form-control"  readonly />
                    <span asp-validation-for="CreadoPor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Modificado Por</label>
                    <input asp-for="ModificadoPor" class="form-control"  readonly />
                    <span asp-validation-for="ModificadoPor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Estado</label>
                    <select asp-for="Estado" asp-items="Model.Estados" class="form-control"></select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Rol</label>
                    <select asp-for="IdRol" asp-items="Model.Roles" class="form-control"></select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>

                <div class="card-footer text-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="oi oi-check"></i>
                        </button>
                        <a href="@Url.Action("Index", "Usuarios")" class="btn btn-sm btn-primary"><i class="oi oi-arrow-thick-left"></i></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}