@model IEnumerable<Ambe.Frontend.Models.Entidades.Usuarios> 
@{
    ViewData["Title"] = "Index";
}

@section Estilos {
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["AlertMessage"] != null)
{
    <script>
        $(function () {
            Swal.fire({
                title: '¡Éxito!',
                text: '@TempData["AlertMessage"]',
                icon: 'success',
                confirmButtonText: 'Aceptar'
            });
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        $(function () {
            Swal.fire({
                title: '¡Error!',
                text: '@TempData["ErrorMessage"]',
                icon: 'warning',
                confirmButtonText: 'Aceptar'
            });
        });
    </script>
}

<p>
    <a onclick="showInPopup('@Url.Action("Create", "Usuarios", new { id = 0 })', '')"
       class="btn btn-sm btn-primary text-white mt-3"><i class="oi oi-plus"></i> Nuevo Usuario</a>
</p>

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center bg-custom">
            <div class="card-header text-center">
                <img src="/images/ramgarlogo.jpg" style="width: 75px; height: auto; border-radius: 50%; object-fit: cover;"/>
            </div>
        </div>
        <div class="card-body">
            <h5 class="card-title text-center">Lista de Usuarios</h5>
            <table id="usuario" class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Correo</th>                        
                        <th scope="col">Fecha de creación</th>
                        <th scope="col">Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.IdUsuario</th>
                            <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>                           
                            <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td class="text-success">
                                <strong>@Html.DisplayFor(modelItem => item.Estado)</strong>
                            </td>
                            <td>
                                <a onclick="showInPopup('@Url.Action("AprobarUsuario", "Usuarios", new { id = item.IdUsuario }, Context.Request.Scheme)' ,
                    '')" class="btn btn-outline-success btn-sm"><i class="oi oi-circle-check"></i> </a>
                                <button data-id="@item.IdUsuario" class="btn btn-outline-danger btn-sm deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog">
                                    <i class="oi oi-circle-x"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_MostrarModal" />


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/showmodal.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#usuario').DataTable({
                "language": {
                    url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
            });
        });
    </script>

    <script>
        sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Usuarios/Delete/', false);
    </script>
}

