@model Ambe.Frontend.Models.PersonaViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <img src="/images/ramgarlogo.jpg" style="width: 100px; height: auto;" />
        </div>
        <div class="card-body">
            <h5>Crear Usuario </h5>
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
                <input type="hidden" asp-for="IdTipoPersona" />
                <input type="hidden" asp-for="IdInstituto" />
                <input type="hidden" asp-for="IdRol" />
                <input type="hidden" asp-for="Estado"/>
                <input type="hidden" asp-for="Usuario"/>
                <input type="hidden" asp-for="NombreUsuario" />
                <input type="hidden" asp-for="CreadoPor"/>
                <input type="hidden" asp-for="ModificadoPor" />
                <input type="hidden" asp-for="FechaUltimaConexion" />

                <div class="form-group">
                    <input asp-for="PrimerNombre" class="form-control" placeholder="Primer Nombre" />
                    <span asp-validation-for="PrimerNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SegundoNombre" class="form-control" placeholder="Segundo Nombre" />
                    <span asp-validation-for="SegundoNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PrimerApellido" class="form-control" placeholder="Primer Apellido" />
                    <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SegundoApellido" class="form-control" placeholder="Segundo Apellido" />
                    <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Fecha de nacimiento:</label>
                    <input asp-for="FechaNacimiento" class="form-control" placeholder="Fecha de Nacimiento" type="date" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Genero" class="form-control" placeholder="Genero"  />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="CorreoElectronico" class="form-control" placeholder="Correo electronico" type="email" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Contraseña" class="form-control" placeholder="Contraseña" type="password" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <div class="card-footer text-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="oi oi-check"></i>
                        </button>
                        <a href="@Url.Action("Index", "Usuarios")" class="btn btn-sm btn-primary"><i class="oi oi-arrow-thick-left"></i></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


